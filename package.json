{
  "name": "@samk-dev/nuxt-uikit3-module",
  "description": "Nuxt Uikit 3 module",
  "license": "MIT",
  "workspaces": [
    "docs",
    "examples",
    "nuxt-uikit3"
  ],
  "repository": "samk-dev/nuxt-uikit3",
  "author": {
    "name": "Sam K",
    "url": "https://samk.dev"
  },
  "bugs": "https://github.com/samk-dev/nuxt-uikit3/issues",
  "keywords": [
    "nuxt",
    "nuxtjs",
    "nuxt3",
    "nuxt-module",
    "uikit3",
    "yoothemes"
  ],
  "scripts": {
    "lint": "eslint .",
    "format": "prettier --write \"**/*.{ts,tsx,vue,json}\""
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.5",
    "@commitlint/config-conventional": "^17.6.5",
    "@nuxt/eslint-config": "^0.1.1",
    "changelogen": "^0.5.3",
    "eslint": "^8.43.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8"
  },
  "lint-staged": {
    "nuxt-uikit3/**/*.{.js,ts,vue,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "docs/**/*.{.js,ts,vue,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=14"
  }
}
